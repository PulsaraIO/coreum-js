{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "extends": "./tsconfig.paths.json"
}
