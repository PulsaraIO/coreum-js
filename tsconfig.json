{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es6",
    "rootDir": "./",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"],
  "extends": "./tsconfig.paths.json",
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "exclude": "./node_modules/**"
  }
}
